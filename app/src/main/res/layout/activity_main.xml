<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button

        android:id="@+id/button"
        android:layout_width="345dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:text="Game now"
        android:textColor="@color/white"
        android:background="@drawable/radius_btn"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



    <Button

        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="39dp"
        android:layout_marginBottom="676dp"
        android:background="@drawable/radiis_btn2"
        android:text="Log in"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button

        android:id="@+id/button1"
        android:layout_width="345dp"
        android:layout_height="65dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/radius_btn1"
        android:text="Log in with Facebook"
        android:textColor="@color/black"

        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button

        android:id="@+id/button5"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/radius_btn1"
        android:text="----or----"
        android:textColor="#918686"

        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button

        android:id="@+id/button9"
        android:layout_width="203dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/radius_btn1"
        android:text="Up with Email"
        android:textColor="@color/black"

        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="@drawable/treug"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="189dp"
        android:layout_height="196dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/ventiiiiiiiiiiiiii"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds" />


</androidx.constraintlayout.widget.ConstraintLayout>



